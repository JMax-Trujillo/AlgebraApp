<Principal>:
    # Fondo
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '/assets/img/login_fondo.png'  # Usa la imagen de fondo que tienes

    # Añadir la tarjeta al centro
    Card:
        size_hint: 0.4, 0.6
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<Card>:
    rows: 4
    padding: 20
    spacing: 10
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1  # Fondo semitransparente
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]

    # Aquí van los widgets reales de la tarjeta
    Label:
        text: "Login"
        font_size: 32
        bold: True
        color: 1, 1, 1, 1

    TextInput:
        hint_text: "Username"
        multiline: False

    TextInput:
        hint_text: "Password"
        password: True
        multiline: False

    Button:
        text: "Login"
        size_hint_y: None
        height: 40
